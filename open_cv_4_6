int main()
{
	Mat img1 = imread("C://images//Lenna.jpg", IMREAD_GRAYSCALE);
	imshow("Original Image", img1);

	Mat table(1, 256, CV_8U); // â‘ 

	uchar* p = table.ptr();
	for (int i = 0; i < 90; ++i)
		p[i] = i;
	for (int i = 90; i < 192; ++i)
		p[i] = 0;
	for (int i = 192; i < 256; ++i)
		p[i] = i;

	Mat img2;
	LUT(img1, table, img2);

	imshow("New Image", img2);
	waitKey(0);

	return 0;
}
